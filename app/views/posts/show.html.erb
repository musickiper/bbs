<link href="https://vjs.zencdn.net/7.8.4/video-js.css" rel="stylesheet"/>

<div class="container">
  <div class="font-weight-bold mt-5" style="font-size: 5rem; overflow-wrap: break-word">
    <%= @post.title %>
  </div>

  <div class="my-5 d-flex justify-content-between">
    <div class="d-flex align-items-center">
      <span class="mr-2"><%= link_to @user.username, user_path(@user), class: "font-weight-bold" %></span>
      â€¢
      <span class="text-black-50 ml-2"><%= @post.created_at.strftime("%F") %></span>
    </div>
    <div>
      <%= like_or_unlike_button(@post, @like) %>
    </div>
  </div>

  <div class="my-5">
    <%= thumbnail_image(@post) %>
  </div>

  <div>
    <%= @post.body %>
  </div>
</div>

<% if current_user?(@user) %>
  <div class="d-flex justify-content-center my-5">
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning mr-3" %>
    <%= link_to 'Delete', post_path(@post), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
  </div>
<% end %>

<hr/>

<div>
  <%= render "posts/commentForm", parent_id: '' %>
</div>

<hr/>

<%= render "posts/comments", comments: @comments.parents %>

<script src="https://vjs.zencdn.net/7.8.4/video.js"></script>