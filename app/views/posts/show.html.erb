<div class="container">
  <div class="font-weight-bold mt-5" style="font-size: 5rem; overflow-wrap: break-word">
    <%= @post.title %>
  </div>

  <div class="my-5">
    <%= link_to @user.username, user_path(@user), class: "font-weight-bold" %>
    â€¢
    <span class="text-black-50"><%= @post.created_at.strftime("%F") %></span>
