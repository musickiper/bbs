<h1 class="text-center"><%= pluralize(@users.size, "User") %></h1>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <div class="d-flex w-100 justify-content-between">
        <%= link_to user.username, user, class: "h5 font-weight-bold" %>
        <small><%= time_ago_in_words(user.created_at) %></small>
      </div>
      <p class="mb-1"><%= user.email %></p>
    </li>
  <% end %>
</ul>
